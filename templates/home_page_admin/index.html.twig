{% extends 'base.html.twig' %}
{% block title %}TRT Conseil | Home{% endblock %}

{% block stylesheets%}
    <link href="assets/homepage.css" rel="stylesheet">
{% endblock %}
{% block body %}
    {% block homepage %}
    <header>
        <div class="profile">
            <div class="flex-profile">
                <img src="{{ asset('assets/images/live.png')}}" />

                  <h1>{{ email }}</h1>

                <img src="{{ asset('assets/images/profile.png')}}" />
            </div>
        </div>
    </header>
    <div class="sidenav">
        <img src="{{ asset('./assets/images/logo.png') }}" id="logo">
        <div class="navlinks">
            <ul>
                <li><img src="{{ asset('assets/images/home.png')}}" /><a href="{{ path('app_home_page') }}">Home</a></li>
                <li><img src="{{ asset('assets/images/annonces.png')}}" /><a href="{{  path('app_annonce_index')}}">Annonces</a></li>
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_RECRUTEUR') %}
                    <li><img src="{{ asset('assets/images/upload.png')}}" /><a href="{{ path('app_annonce_new') }}">Publier</a></li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_CONSULTANT') %}
                    <li><img src="{{ asset('assets/images/back-office.png')}}" /><a href="{{ path('admin')}}">Back-office</a></li>
                {% endif %}

            </ul>
        </div>
        <div class="logout">
            <ul>
                <li><img src="{{ asset('assets/images/logout.png')}}" /><a href="{{ path('app_logout')}}">Logout</a></li>
            </ul>
        </div>
    </div>
        {% endblock %}
    <div class="main-wrapper">
            <div class="wrapper-left">

            </div>

            <div class="block-right">

                    <div class="wrapper-1">

                    </div>

                    <div class="wrapper-2">

                    </div>
         </div>
    </div>
{% endblock %}
